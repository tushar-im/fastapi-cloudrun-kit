# Environment configuration example
# Copy this file to .env and fill in the values

# Application Settings
APP_NAME="FastAPI CloudRun Kit"
APP_VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
RELOAD=false

# CORS Settings (comma-separated list of allowed origins)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000,https://yourdomain.com"

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-service-account.json

# Firebase Emulator Settings (for local development)
USE_FIREBASE_EMULATOR=false
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Google Cloud Settings
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcp-service-account.json

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Settings
HEALTH_CHECK_INTERVAL=30

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Database Configuration (if using additional databases)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Email Configuration (if using email features)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# External API Keys (if needed)
OPENAI_API_KEY=your-openai-api-key
STRIPE_API_KEY=your-stripe-api-key
SENDGRID_API_KEY=your-sendgrid-api-key

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn
GOOGLE_ANALYTICS_ID=GA-XXXXXX-X

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true