# Local development environment configuration
# Copy this file to .env for local development with Firebase emulators

# Application Settings
APP_NAME="FastAPI CloudRun Kit - Local"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Settings - Allow all origins for development
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:8000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8000"

# Firebase Configuration - Using emulators
FIREBASE_PROJECT_ID=demo-project
USE_FIREBASE_EMULATOR=true
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# No credentials needed for emulators
FIREBASE_CREDENTIALS_PATH=
FIREBASE_DATABASE_URL=

# Google Cloud Settings - Not needed for local development
GOOGLE_CLOUD_PROJECT=demo-project
GOOGLE_APPLICATION_CREDENTIALS=

# Security Settings - Use weak keys for development only
SECRET_KEY=development-secret-key-not-for-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Rate Limiting - More lenient for development
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Logging Settings - More verbose for development
LOG_LEVEL=DEBUG
LOG_FORMAT=console

# Health Check Settings
HEALTH_CHECK_INTERVAL=10

# Redis Configuration (optional - can use local Redis or disable)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Feature Flags - Enable all features for development
ENABLE_ANALYTICS=false
ENABLE_MONITORING=false
ENABLE_RATE_LIMITING=false
ENABLE_CACHING=false