# Test environment configuration
# This file is used when running tests

# Application Settings
APP_NAME="FastAPI CloudRun Kit - Test"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=test
HOST=0.0.0.0
PORT=8000
RELOAD=false

# CORS Settings
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000"

# Firebase Configuration - Always use emulators for tests
FIREBASE_PROJECT_ID=demo-project
USE_FIREBASE_EMULATOR=true
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# No credentials needed for emulators
FIREBASE_CREDENTIALS_PATH=
FIREBASE_DATABASE_URL=

# Google Cloud Settings
GOOGLE_CLOUD_PROJECT=demo-project
GOOGLE_APPLICATION_CREDENTIALS=

# Security Settings - Test keys (not secure)
SECRET_KEY=test-secret-key-not-for-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=1

# Rate Limiting - Disabled for tests
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=60

# Logging Settings
LOG_LEVEL=WARNING
LOG_FORMAT=console

# Health Check Settings
HEALTH_CHECK_INTERVAL=5

# Disable external services for tests
REDIS_URL=
REDIS_PASSWORD=

# Feature Flags - Disable for tests unless specifically testing them
ENABLE_ANALYTICS=false
ENABLE_MONITORING=false
ENABLE_RATE_LIMITING=false
ENABLE_CACHING=false