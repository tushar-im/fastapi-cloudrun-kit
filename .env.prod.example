# Production environment configuration
# This file shows production-ready settings
# DO NOT commit this file with real secrets!

# Application Settings
APP_NAME="FastAPI CloudRun Kit"
APP_VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
RELOAD=false

# CORS Settings - Restrict to your domains only
BACKEND_CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com"

# Firebase Configuration - Production Firebase project
FIREBASE_PROJECT_ID=your-production-firebase-project
FIREBASE_DATABASE_URL=https://your-production-project.firebaseio.com

# Firebase Emulator Settings - Disabled in production
USE_FIREBASE_EMULATOR=false
FIREBASE_AUTH_EMULATOR_HOST=
FIRESTORE_EMULATOR_HOST=
FIREBASE_STORAGE_EMULATOR_HOST=

# Google Cloud Settings
GOOGLE_CLOUD_PROJECT=your-production-gcp-project

# Credentials - Use Google Cloud Secret Manager in production
# Don't set these directly, use Cloud Run secrets instead
FIREBASE_CREDENTIALS_PATH=
GOOGLE_APPLICATION_CREDENTIALS=

# Security Settings - Use strong keys from Secret Manager
# These should be injected as secrets, not environment variables
SECRET_KEY=${SECRET_KEY}
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting - Production limits
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging Settings - Structured logging for production
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Settings
HEALTH_CHECK_INTERVAL=30

# Redis Configuration - Use Cloud Memorystore in production
REDIS_URL=${REDIS_URL}
REDIS_PASSWORD=${REDIS_PASSWORD}

# Database Configuration - Use Cloud SQL in production
DATABASE_URL=${DATABASE_URL}

# Email Configuration - Use SendGrid or similar in production
SMTP_SERVER=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=${SENDGRID_USERNAME}
SMTP_PASSWORD=${SENDGRID_PASSWORD}
SMTP_TLS=true

# External API Keys - Inject from Secret Manager
OPENAI_API_KEY=${OPENAI_API_KEY}
STRIPE_API_KEY=${STRIPE_API_KEY}
SENDGRID_API_KEY=${SENDGRID_API_KEY}

# Monitoring and Analytics - Production monitoring
SENTRY_DSN=${SENTRY_DSN}
GOOGLE_ANALYTICS_ID=GA-XXXXXX-X

# Feature Flags - Enable production features
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true

# Performance Settings
UVICORN_WORKERS=1
UVICORN_MAX_REQUESTS=1000
UVICORN_MAX_REQUESTS_JITTER=50
UVICORN_BACKLOG=2048

# Security Headers
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin